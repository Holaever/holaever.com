    "coffeelint": "Lint completely!",
    "jsx": "",
    "jshint": "JS 检测完毕！",
    "jsmin": "JavaScript 压缩成功成功！",
    "cmprs_root_js_src": "JS files from root have been compressed completely!",
    "cmprs_splited_tasks_js_src": "JS files from 'gulp' folder have been compressed completely!"
  }

